{
  "permissions": {
    "allow": [
      "*(python:*)",
      "*(cd:*)",
      "*(find:*)",
      "*(claude:*)",
      "*(mkdir:*)",
      "*(cat:*)",
      "*(git add:*)",
      "*(git commit:*)",
      "*(git push:*)",
      "*(source:*)",
      "*(qms:*)",
      "*(export:*)",
      "Skill(qms)",
      "Bash(git add:*)",
      "Bash(git commit:*)"
    ],
    "deny": [
      "Edit(QMS/**)",
      "Write(QMS/**)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/qms-write-guard.py"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/chronicle_capture.py"
          }
        ]
      }
    ]
  }
}
