{
  "permissions": {
    "allow": [
      "Bash(python:*)",
      "Bash(cd:* && python *)",
      "Bash(cd:* && git *)",
      "Bash(find:*)",
      "Bash(claude:*)",
      "Bash(mkdir:*)",
      "Bash(cat:*)",
      "Bash(git push)"
    ]
  },
  "hooks": {
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/chronicle_capture.py"
          }
        ]
      }
    ]
  }
}
