{
  "permissions": {
    "allow": [
      "Skill(qms)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push)",
      "Bash(python .claude/qms.py:*)"
    ],
    "deny": [
      "Edit(QMS/**)",
      "Write(QMS/**)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/qms-write-guard.py"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/chronicle_capture.py"
          }
        ]
      }
    ]
  }
}
