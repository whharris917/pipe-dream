{
  "permissions": {
    "allow": [
      "Skill(qms)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push)",
      "Bash(python .claude/qms.py:*)",
      "Bash(dir:*)",
      "Bash(ls:*)",
      "Bash(python:*)",
      "Update(**)"
    ],
    "deny": [
      "Edit(QMS/**)",
      "Write(QMS/**)",
      "Edit(**/QMS/**)",
      "Write(**/QMS/**)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/chronicle_capture.py"
          }
        ]
      }
    ]
  }
}
