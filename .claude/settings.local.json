{
  "permissions": {
    "allow": [
      "Bash(python:*)",
      "Bash(cd:*)",
      "Bash(find:*)",
      "Bash(claude:*)",
      "Bash(mkdir:*)",
      "Bash(cat:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(source:*)",
      "Bash(qms:*)",
      "Bash(export:*)",
      "Update(.claude/**)"
    ],
    "deny": [
      "Edit(QMS/**)",
      "Write(QMS/**)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/setup-qms-path.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/qms-write-guard.py"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/chronicle_capture.py"
          }
        ]
      }
    ]
  }
}